<h2>
  <%= hunt.title %>
</h2>

<% if hunt.users.each do |user| %>
  <div class="media mt-2 mb-2">
    <%= image_tag user.gravatar_url(70),
                  class: 'mr-3 rounded',
                  size: 70 %>
    <div class="media-body">
      <h5 class="mt-0">
        <%= user.display_name %>
      </h5>
      <% if user == hunt.creator_user %>
        <%= user == current_user ? 'You' : hunt.creator_user.display_name %>
        started this hunt on
        <%= hunt.created_at.strftime('%d %b %Y') %>
      <% elsif user == current_user %>
        This is you!
      <% else %>
        <%# TODO: Fix this to use HuntMembership.created_at once it exists %>
        Joined the hunt on <%= user.created_at.strftime('%d %b %Y') %>.
      <% end %>
    </div>
  </div>
<% end.empty? %>
  <p>Only you, so far!</p>
<% end %>

<% if hunt.homes.enabled.size.positive? %>
  <%= link_to "View #{pluralize(hunt.homes.enabled.size, 'home')}",
              hunt_homes_path(hunt),
              class: 'btn btn-success' %>
<% else %>
  <%= link_to 'Add the first home',
              new_hunt_home_path(hunt),
              class: 'btn btn-success' %>
<% end %>

<h4>
  <%= hunt.title %>
</h4>

<% if hunt.hunt_memberships.includes(:user).each do |hm| %>
  <div class="media mt-2 mb-2">
    <%= image_tag hm.user.gravatar_url(70),
                  class: 'mr-3 rounded',
                  size: 70 %>
    <div class="media-body">
      <h5 class="mt-0 mb-0">
        <%= hm.user.display_name %>
      </h5>
      <p>
        <% if hm.user == hunt.creator_user %>
          started on
          <%= hunt.created_at.strftime('%d %b %Y') %>
        <% else %>
          joined on
          <%= hm.created_at.strftime('%d %b %Y') %>
        <% end %>
        <br>
        added
        <%= fa_icon('home', type: :solid) %>
        <%= hunt.homes.enabled.where(creator_user: hm.user).size %>
        &nbsp;
        <%= fa_icon('comments', type: :solid) %>
        <%= hm.user.comments.where(home: hunt.homes).size %>
      </p>
    </div>
  </div>
<% end.empty? %>
  <p>Only you, so far!</p>
<% end %>

<h1>HomePicker</h1>

<%= render 'layouts/about_blurb' %>

<% hunts_shown = 5 %>

<% if user_signed_in? %>
  <p>
    <% current_user.hunts.order(created_at: :desc).limit(hunts_shown).each do |hunt| %>
      <%= link_to hunt.title,
                  hunt_homes_path(hunt),
                  class: 'btn btn-warning m-1' %>
    <% end %>
  </p>
  <% if current_user.hunts.size > hunts_shown %>
    <p>
      <%= link_to 'View all hunts',
                  hunts_path,
                  class: 'btn btn-outline-info' %>
    </p>
  <% end %>
  <p>
    <%= link_to 'Begin a new hunt',
                hunts_path,
                class: 'btn btn-outline-info' %>
  </p>
<% else %>
  <p>
    <%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary' %>
    or
    <%= link_to 'Log In', new_user_session_path, class: 'btn btn-primary' %>
  </p>
<% end %>

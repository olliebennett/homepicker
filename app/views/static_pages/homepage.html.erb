<h1>Home Picker</h1>

<% if user_signed_in? %>
  <% if current_user.hunts.any? %>
    <p>
      <%= link_to "View '#{current_user.hunts.last.title}' Homes",
                  hunt_homes_path(current_user.hunts.last),
                  class: 'btn btn-warning' %>
    </p>
  <% end %>
  <p>
    <%= link_to 'Switch to a different home hunt',
                hunts_path,
                class: 'btn btn-outline-info' %>
  </p>
<% else %>
  <p>
    <%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary' %>
    or
    <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary' %>
  </p>
<% end %>

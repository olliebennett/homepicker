<h1>Homes</h1>

<table class="table">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Description</th>
      <th>Links</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homes.each do |home| %>
      <tr>
        <td>
          <%= link_to home do %>
            <%= image_tag home.images.first.url, height: 100 %>
          <% end %>
        </td>
        <td>
          <p class="lead"><%= link_to home.address, home %></p>
          <p><%= home.title %></p>
        </td>
        <td>
          <% if home.agent_url.present? %>
            <%= link_to home.agent_url 'Agent' %>
          <% end %>
          <% if home.zoopla_url.present? %>
            <%= link_to home.zoopla_url do %>
              <%= image_tag 'agent-icons/zoopla.png', size: 25 %>
              Zoopla
            <% end %>
          <% end %>
          <% if home.rightmove_url.present? %>
            <%= link_to home.rightmove_url do %>
              <%= image_tag 'agent-icons/rightmove.png', size: 25 %>
              Rightmove
            <% end %>
          <% end %>
        </td>
        <td><%= number_to_currency home.price, precision: 0 %></td>
        <td><%= link_to 'Edit', edit_home_path(home) %></td>
        <td><%= link_to 'Destroy', home, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Home', new_home_path %>
